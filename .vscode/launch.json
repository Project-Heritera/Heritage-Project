  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Django Test file",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\backend\\manage.py",
      "args": ["test", "accounts.tests.LoginSystemAPITestCase"],
      "django": true
    },

    {
      "name": "Python Debugger: Django web",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\backend\\manage.py",
      "args": ["runserver", "9000"],
      "django": true
    }
  ]
}
